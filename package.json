{
  "name": "kiro-wiz",
  "version": "1.0.0",
  "description": "Kiro scaffold generator â€” create agents, hooks, prompts, steering docs, skills, MCP configs, and settings for CLI and IDE",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "kiro-wiz": "dist/main.js"
  },
  "files": [
    "dist",
    "powers",
    "src/templates",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ryolambert/kiro-wiz.git"
  },
  "bugs": {
    "url": "https://github.com/ryolambert/kiro-wiz/issues"
  },
  "homepage": "https://github.com/ryolambert/kiro-wiz#readme",
  "author": "Ryo Lambert",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "bun run src/main.ts",
    "dev:tui": "bun run src/main.ts --tui",
    "dev:mcp": "bun run src/main.ts --mcp",
    "build": "bun run scripts/build.ts",
    "build:linux-x64": "bun build src/main.ts --compile --target=bun-linux-x64 --outfile dist/kiro-wiz-linux-x64 --define PKG_VERSION='\"0.0.0\"'",
    "build:linux-arm64": "bun build src/main.ts --compile --target=bun-linux-arm64 --outfile dist/kiro-wiz-linux-arm64 --define PKG_VERSION='\"0.0.0\"'",
    "build:darwin-x64": "bun build src/main.ts --compile --target=bun-darwin-x64 --outfile dist/kiro-wiz-darwin-x64 --define PKG_VERSION='\"0.0.0\"'",
    "build:darwin-arm64": "bun build src/main.ts --compile --target=bun-darwin-arm64 --outfile dist/kiro-wiz-darwin-arm64 --define PKG_VERSION='\"0.0.0\"'",
    "build:windows-x64": "bun build src/main.ts --compile --target=bun-windows-x64 --outfile dist/kiro-wiz-windows-x64 --define PKG_VERSION='\"0.0.0\"'",
    "prepublishOnly": "bun run clean && bun run build",
    "install:local": "bun run src/main.ts install --scope local",
    "install:global": "bun run src/main.ts install --scope global",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "format": "biome format --write",
    "format:check": "biome format",
    "check": "biome check",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "keywords": [
    "kiro",
    "cli",
    "ide",
    "agent",
    "scaffold",
    "mcp",
    "tui"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@opentui/core": "latest",
    "@opentui/react": "latest",
    "cheerio": "^1.0.0",
    "js-yaml": "^4.1.0",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.0",
    "@types/react": "^19.0.0",
    "@vitest/coverage-v8": "^3.2.1",
    "fast-check": "^4.1.1",
    "semantic-release": "^24.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0",
    "vitest": "^3.2.1"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
