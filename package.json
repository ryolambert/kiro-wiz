{
  "name": "kiro-wiz",
  "version": "1.1.0",
  "description": "Kiro scaffold generator â€” create agents, hooks, prompts, steering docs, skills, MCP configs, and settings for CLI and IDE",
  "type": "module",
  "bin": {
    "kiro-wiz": "bin/kiro-wiz"
  },
  "files": [
    "bin",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ryolambert/kiro-wiz.git"
  },
  "bugs": {
    "url": "https://github.com/ryolambert/kiro-wiz/issues"
  },
  "homepage": "https://github.com/ryolambert/kiro-wiz#readme",
  "author": "Ryo Lambert",
  "scripts": {
    "dev": "bun run --conditions=browser src/main.ts",
    "dev:mcp": "bun run src/main.ts --mcp",
    "build": "bun run scripts/build.ts",
    "build:single": "bun run scripts/build.ts --single",
    "publish:npm": "bun run scripts/publish.ts",
    "publish:npm:dry": "bun run scripts/publish.ts --dry-run",
    "install:local": "bun run src/main.ts install --scope local",
    "install:global": "bun run src/main.ts install --scope global",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "format": "biome format --write",
    "format:check": "biome format",
    "check": "biome check"
  },
  "keywords": [
    "kiro",
    "cli",
    "ide",
    "agent",
    "scaffold",
    "mcp",
    "tui"
  ],
  "license": "MIT",
  "optionalDependencies": {
    "kiro-wiz-darwin-arm64": "0.0.0-development",
    "kiro-wiz-darwin-x64": "0.0.0-development",
    "kiro-wiz-linux-x64": "0.0.0-development",
    "kiro-wiz-linux-arm64": "0.0.0-development",
    "kiro-wiz-windows-x64": "0.0.0-development"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@opentui/core": "^0.1.77",
    "@opentui/react": "^0.1.77",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.0",
    "@types/react": "^19.0.0",
    "@vitest/coverage-v8": "^3.2.1",
    "cheerio": "^1.0.0",
    "fast-check": "^4.1.1",
    "js-yaml": "^4.1.0",
    "react": "^19.0.0",
    "semantic-release": "^24.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0",
    "vitest": "^3.2.1"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
